# Email Report Configuration
# Copy this file to .env and fill in your actual credentials

# Source Accounts (accounts to read emails from)
# Add as many accounts as needed using the pattern: ACCOUNT_N_EMAIL, ACCOUNT_N_PASS, ACCOUNT_N_PROTOCOL, ACCOUNT_N_SERVER
# where N is a number (1, 2, 3, etc.)
# ACCOUNT_N_PROTOCOL can be IMAP (default) or POP3
# ACCOUNT_N_SERVER defaults to imap.gmail.com for IMAP or pop.gmail.com for POP3 if not specified

ACCOUNT_1_EMAIL=support@yourcompany.com
ACCOUNT_1_PASS=your_app_password_here
ACCOUNT_1_PROTOCOL=IMAP
ACCOUNT_1_SERVER=imap.gmail.com

ACCOUNT_2_EMAIL=sales@yourcompany.com
ACCOUNT_2_PASS=your_app_password_here
ACCOUNT_2_PROTOCOL=IMAP
ACCOUNT_2_SERVER=imap.gmail.com

ACCOUNT_3_EMAIL=info@yourcompany.com
ACCOUNT_3_PASS=your_app_password_here
ACCOUNT_3_PROTOCOL=POP3
ACCOUNT_3_SERVER=pop.gmail.com

# Add more accounts as needed:
# ACCOUNT_4_EMAIL=another@yourcompany.com
# ACCOUNT_4_PASS=your_app_password_here
# ACCOUNT_4_PROTOCOL=IMAP
# ACCOUNT_4_SERVER=imap.gmail.com

# Sender Account (bot account to send reports)
SENDER_EMAIL=admin_bot@yourcompany.com
SENDER_PASS=your_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Report Settings
RECIPIENT_EMAIL=manager@yourcompany.com
REPORT_FILENAME=consolidated_email_report.xlsx
DAYS_BACK=7
